//-----------------<[ Funkcje: ]>-------------------
public PayDay()
{
	new string[256];
	
	foreach(new i : GroupMember(LoggedPlayers))
	{
		new wyplata=0, 
			podatek=0;
			
		//Respekt ++
		PlayerInfo[i][pRespekt]++;
		PlayerInfo[i][pCzasOnline]++;
			
		SendClientMessage(i, COLOR_WHITE, "|___ STAN KONTA ___|");
		format(string, sizeof(string), "  Wyp³ata: $%d   Podatek: -$%d", wyplata, podatek);
		SendClientMessage(i, COLOR_GRAD1, string);
		SendClientMessage(i, COLOR_GRAD4, "|--------------------------------------|");
	}

	return 1;
}

